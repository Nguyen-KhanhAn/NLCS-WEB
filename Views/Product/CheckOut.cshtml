@using Demo_Hangfire.Models
@model List<WebsiteBanHang.Models.GioHang>
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var QuantityCart = Model != null ? Model.Count : 0;
}

<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Giỏ hàng - @QuantityCart mặt hàng</h5>
                    </div>
                    <div class="card-body">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <!-- Single item -->
                                <div class="row">

                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <!-- Image -->
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                            <img src="@Url.Content("~/Content/images/"+item.Image)"
                                                 class="w-100" alt="Blue Jeans Jacket" />
                                            <a href="#!">
                                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                            </a>
                                        </div>
                                        <!-- Image -->
                                    </div>



                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <!-- Data -->
                                        <p><strong>@item.Name</strong></p>

                                        <a href="@Url.Action("XoaGioHang", "Product", new {@MaSP = item.ID})" type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                           title="Remove item">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                                                title="Move to the wish list">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                        <!-- Data -->
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <!-- Quantity -->
                                        <div class="d-flex mb-4" style="max-width: 300px">
                                            <a href="@Url.Action("GiamSL", "Product", new {@MaSP = item.ID})" class="btn btn-primary px-3 me-2">
                                                <i class="fas fa-minus"></i>
                                            </a>

                                            <div class="form-outline">
                                                <input id="form1" min="0" name="quantity" value="@item.Quantity" type="number" class="form-control" />
                                                <label class="form-label" for="form1">Số lượng</label>
                                            </div>

                                            <a href="@Url.Action("ThemSL", "Product", new {@MaSP = item.ID})" class="btn btn-primary px-3 ms-2">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <!-- Quantity -->
                                        <!-- Price -->
                                        <p class="text-start text-md-center">
                                            <strong>@item.Total.ToString("#,##0")</strong>
                                        </p>
                                        <!-- Price -->
                                    </div>
                                </div>
                            }
                        }


                        <!-- Single item -->

                        <hr class="my-4" />

                        <!-- Single item -->
                        <!-- Single item -->
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Dự kiến ​​giao hàng</strong></p>
                        <p class="mb-0">12.10.2023 - 14.10.2023</p>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p><strong>Chúng tôi đồng ý</strong></p>
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                             alt="Visa" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                             alt="American Express" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                             alt="Mastercard" />
                        <img class="me-2" width="45px"
                             src="https://kieutruong.com/wp-content/uploads/2019/11/huong-dan-dang-ky-tai-khoan-paypal.jpg"
                             alt="PayPal acceptance mark" />
                    </div>
                </div>
            </div>
            @{
                decimal? number1 = @ViewBag.Total;
                string GiaTien1 = number1.Value.ToString("#,##0");



            }
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Tóm tắt</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Tổng
                                <span> @GiaTien1</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Tiền ship
                                <span>Free</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <form id="myform" action="/" method="post">
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" id="radio1" name="optradio" value="1" checked>COD
                                        <label class="form-check-label" for="radio1"></label>
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" id="radio2" name="optradio" value="3">VISA
                                        <label class="form-check-label" for="radio2"></label>
                                    </div>
                                    @*<div class="form-check">
                                        <input type="radio" class="form-check-input" name="optradio" value="2">MoMo
                                        <label class="form-check-label"></label>
                                    </div>*@
                                </form>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng thanh toán</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                <span><strong> @GiaTien1</strong></span>
                            </li>
                        </ul>
                        @if (QuantityCart != 0)
                        {
                            <button type="button" id="checkOut-btn" class="btn btn-primary btn-lg btn-block">
                                Hoàn tất
                            </button>
                        }
                        else
                        {
                            <button disabled type="button" id="checkOut-btn" class="btn btn-primary btn-lg btn-block">
                                Hoàn tất
                            </button>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $("#checkOut-btn").click(function () {
        var checked = $("#myform input[type='radio']:checked").val();
        console.log(checked);
        $.ajax({
            type: "GET",
            url: "https://localhost:44389/Order/DatHang?id=" + checked,
            success: function (data) {
                console.log(data.Url)
                if (data.Url != "") {

                    window.location.href = data.Url;
                }
                else {
                    Swal.fire({

                        icon: 'success',
                        title: 'Đặt hàng thành công',
                        showConfirmButton: true,

                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.reload();
                        }
                    })
                    
                }
                
            }
        });
    })
</script>