
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Content/js/jquery-2.2.3.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>PaymentConfirm</title>
</head>
<body>
    <div>
        <input type="hidden" name="name" id="checkStatus" value="@ViewBag.check" />
    </div>
    <script>

        var check = $("#checkStatus").val();
        if (check == "success") {
            Swal.fire({

                icon: 'success',
                title: 'Thành công',
                text: 'Thanh toán mua hàng thành công!',
                showConfirmButton: true,

            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "https://localhost:44389/Product/CheckOut";
                }
            })

        }
        else {
            Swal.fire({

                icon: 'error',
                title: 'Thất bại',
                text: 'Thanh toán mua hàng thất bại!',
                showConfirmButton: true,

            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "https://localhost:44389/Product/CheckOut";
                }
            })

        }
    </script>
</body>
</html>
